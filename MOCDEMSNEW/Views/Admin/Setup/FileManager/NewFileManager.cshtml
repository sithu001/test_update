@{
    Layout = "_AdminLayout";
}
<div class="container text-center mt-5 mb-5">
    <h5 class="custom-text text-uppercase fw-bold">Create New File Manager</h5>
</div>
<div class="container custom-bg shadow-lg">
    <div class="mb-5">
        <a href="javascript:history.back()" class="text-secondary text-decoration-none fw-bold">
            <i class="fa-solid fa-arrow-left me-1"></i> Go Back
        </a>
    </div>

    <form action="" class="ms-md-5">
        <div class="row mb-3">
            <div class="col-md-2">
                <label for="department" class="form-label">Department :</label>
            </div>
            <div class="col-md-4">
                <select class="form-select form-select-sm" style="font-size: 14px; line-height: 1.5rem;"
                        id="department">
                    <option selected>Select Your Department</option>
                    <option value="1">ကုန်သွယ်ရေးဦးစီးဌာန</option>
                    <option value="2">စားသုံးသူရေးရာဦးစီးဌာန</option>
                    <option value="3">eLibrary</option>
                    <option value="4">ပြည်ထောင်စုဝန်ကြီးရုံး</option>
                </select>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-2">
                <label for="section" class="form-label">Sub Department :</label>
            </div>
            <div class="col-md-4">
                <select class="form-select form-select-sm" style="font-size: 14px; line-height: 1.5rem;"
                        id="section">
                    <option selected>Select Your Section</option>
                    <option value="1">
                        အုပ်ချုပ်ရေးနှင့်လူ့အရင်းအမြစ်စီမံခန့်ခွဲမှုဌာနခွဲ
                    </option>
                    <option value="2">သတင်းအချက်အလက်နည်းပညာဌာနခွဲ </option>
                </select>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-2">
                <label for="subSection" class="form-label">Section :</label>
            </div>
            <div class="col-md-4">
                <select class="form-select form-select-sm" style="font-size: 14px; line-height: 1.5rem;"
                        id="subSection">
                    <option selected>Select Your Section</option>
                    <option value="1">
                        အခြားဝန်ကြီးဌာန/အသင်းအဖွဲ့/အဖွဲ့အစည်း/ကုမ္ပဏီများမှ ဝင်စာများ
                    </option>
                    <option value="2">မူဝါဒနှင့်ဥပဒေလုပ်ထုံးလုပ်နည်းစိစစ်ရေးနှင့် လုပ်ငန်းစစ်ဆေးရေးဌာနခွဲ </option>
                </select>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-2">
                <label for="title" class="form-label">Title :</label>
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control" id="title" placeholder="Enter Title">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-2">
                <label for="sortOrder" class="form-label">Sort Order :</label>
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control" id="sortOrder" placeholder="Enter Sort Order">
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 offset-md-2">
                <button type="button" class="btn btn-sm btn-golden text-uppercase fw-bold rounded-pill w-100 mb-3">
                    Create
                    New
                </button>
            </div>
        </div>

    </form>

</div>
