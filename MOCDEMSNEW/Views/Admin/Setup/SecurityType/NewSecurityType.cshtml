@{
    Layout = "_AdminLayout";
}
<div class="container text-center mt-5 mb-5">
    <h5 class="custom-text text-uppercase fw-bold">Create New Security Type</h5>
</div>
<div class="container custom-bg shadow-lg">
    <div class="mb-5">
        <a href="javascript:history.back()" class="text-secondary text-decoration-none fw-bold">
            <i class="fa-solid fa-arrow-left me-1"></i> Go Back
        </a>
    </div>

    <form action="" class="ms-md-5">
        <div class="row mb-3">
            <div class="col-md-1">
                <label for="Name" class="form-label">Name :</label>
            </div>
            <div class="col-md-3">
                <input type="text" class="form-control" id="Name" placeholder="Enter Name">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-1">
                <label for="sortOrder" class="form-label">Sort Order :</label>
            </div>
            <div class="col-md-3">
                <input type="text" class="form-control" id="sortOrder" placeholder="Enter Sort Order">
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 offset-md-1">
                <button type="button" class="btn btn-sm btn-golden text-uppercase fw-bold rounded-pill w-100 mb-3 ">
                    Create
                    New
                </button>
            </div>
        </div>
    </form>
</div>
<div>
    @await Html.PartialAsync("_AdminFooter")
</div>