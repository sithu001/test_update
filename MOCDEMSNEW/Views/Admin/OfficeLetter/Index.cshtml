@{
    Layout = "_AdminLayout";
}
<div class="container d-flex justify-content-center align-items-center" style="height: calc(100vh - 100px);">
    <div class="d-flex flex-column justify-content-center align-items-center h-100 mainNav">
        <div class="row row-cols-3 row-cols-md-3 g-3 w-100">

            <div class="col">
                <a asp-action="OfficeLetters" asp-controller="Admin" class="btn w-100 h-100 position-relative">
                    <i class="custom-icon fa-solid fa-envelope w-50 h-50"></i>
                    <h5 class="text-uppercase text-dark fw-bold fs-6">Office Letter</h5>
                </a>
            </div>

            <div class="col">
                <a asp-action="NoteSheet" asp-controller="Admin" class="btn w-100 h-100 position-relative">
                    <i class="custom-icon fa-solid fa-clipboard w-50 h-50"></i>
                    <h5 class="text-uppercase text-dark fw-bold fs-6">Note Sheets</h5>
                </a>
            </div>

            <div class="col">
                <a asp-action="OfficeLetterRemark" asp-controller="Admin" class="btn w-100 h-100 position-relative">
                    <i class="custom-icon fa-solid fa-comment-dots w-50 h-50"></i>
                    <h5 class="text-uppercase text-dark fw-bold fs-6">Office Letter Remarks</h5>
                </a>
            </div>





        </div>
    </div>
</div>
