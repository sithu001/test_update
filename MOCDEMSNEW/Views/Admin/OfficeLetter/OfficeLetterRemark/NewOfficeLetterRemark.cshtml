@{
    Layout = "_AdminLayout";
}
<div class="container text-center mt-5 mb-5">
    <h4 class="custom-text text-uppercase fw-bold">Create New Office Letter Remarks</h4>
</div>
<div class="container custom-bg shadow-lg">
    <div class="mb-5">
        <a href="javascript:history.back()" class="text-secondary text-decoration-none fw-bold">
            <i class="fa-solid fa-arrow-left me-1"></i> Go Back
        </a>
    </div>
    <form action="" class="ms-md-5">
        <div class="row mb-3">
            <div class="col-md-2">
                <label for="Name" class="form-label">Name :</label>
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control" id="Name" placeholder="Enter Remark Name" style="font-size: 14px; line-height: 1.5rem;">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-2">
                <label for="department" class="form-label">Position :</label>
            </div>
            <div class="col-md-4">
                <select class="form-select form-select-sm" style="font-size: 14px; line-height: 1.5rem;"
                        id="department">
                    <option selected>Select Position</option>
                    <option value="1">ညွှန်ကြားရေးမှူး</option>
                    <option value="2">ဒုတိယညွှန်ကြားရေးမှူး</option>
                    <option value="3">လက်ထောက်ညွှန်ကြားရေးမှူး</option>
                    <option value="4">ဦးစီးအရာရှိ</option>
                </select>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-2">
                <label for="sortOrder" class="form-label">Sort Order :</label>
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control" id="sortOrder" placeholder="Enter Sort Order">
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 offset-md-2">
                <button type="button" class="btn btn-sm btn-golden text-uppercase fw-bold rounded-pill w-100 mb-3 ">
                    Create
                    New
                </button>
            </div>
        </div>
    </form>

</div>
<div>
    @await Html.PartialAsync("_AdminFooter")
</div>