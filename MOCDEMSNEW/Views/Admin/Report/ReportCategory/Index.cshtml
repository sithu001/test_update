@{
    Layout = "_AdminLayout";
}
<div class="container custom-bg mt-5">
    <div class="mb-5">
        <a href="javascript:history.back()" class="text-secondary text-decoration-none fw-bold">
            <i class="fa-solid fa-arrow-left me-1"></i> Go Back
        </a>
    </div>

    <div class="text-center mb-5">
        <h5 class="text-dark text-uppercase fw-bold">
            <i class="fa-solid fa-file-waveform fs-5 px-2"></i>Report Categories
        </h5>
    </div>

    <div class="row">
        <div class="col-12 col-sm-12 col-md-6">
            <form action="" class="mb-5 ms-md-5">
                <div class="row mb-3 justify-content-start">
                    <div class="col-sm-2 text-dark fw-bold fs-6">
                        <label for="Name" class="form-label">Search by :</label>
                    </div>
                    <div class="col-md-6">
                        <select class="form-select form-select-sm" style="font-size: 14px; line-height: 1.5rem;"
                                id="department">
                            <option selected>All Department</option>
                            <option value="1">ပြည်ထောင်စုဝန်ကြီးရုံး</option>
                            <option value="2">ကုန်သွယ်ရေးဦးစီးဌာန</option>
                            <option value="3">စားသုံးသူရေးရာဦးစီးဌာန</option>
                            <option value="4">မူပိုင်ခွင့်ဦးစီးဌာန</option>
                            <option value="5">မြန်မာကုန်သွယ်မှုမြှင့်တင်ရေးအဖွဲ့ </option>
                            <option value="6">eLibrary</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-auto col-sm-auto col-md-auto offset-sm-2">
                        <button type="button" class="btn btn-sm btn-golden text-uppercase fw-bold rounded-pill">
                            <i class="fa-solid fa-magnifying-glass fs-6 me-1"></i>Search
                        </button>
                    </div>
                </div>
            </form>
        </div>

    </div>
    <div class="row text-start text-md-end mb-4">
        <div class="">
            <a asp-action="NewReportCategory" asp-asp-controller="Admin" class="btn btn-golden fw-bold rounded-pill mb-1 mb-md-0 me-1">
                <i class="fa-solid fa-plus fs-5"></i>New Report Category
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table custom-table">
            <thead>
                <tr>
                    <th>
                        No.
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Section
                    </th>
                    <th>
                        Department
                    </th>
                    <th>
                        Secret
                    </th>
                    <th style="width: 350px;">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td data-label="No.">1</td>
                    <td data-label="Name">
                        ဝန်ကြီးဌာန/ အဖွဲ့အစည်းများ၏ ဖွဲ့စည်းပုံအင်အား၊ ခန့်ထားအင်အားနှင့်
                        လစာစရိတ်စာရင်း
                    </td>
                    <td data-label="Section">အုပ်ချုပ်ရေးနှင့်လူ့အရင်းအမြစ်စီမံခန့်ခွဲမှုဌာနခွဲ</td>
                    <td data-label="Department">ပြည်ထောင်စုဝန်ကြီးရုံး</td>
                    <td data-label="Secret"></td>
                    <td data-label="Action">
                        <div class="action">
                            <div class="row mb-3 justify-content-center">

                                <div class="col-auto">
                                    <a href="#" class="btn btn-sm btn-gold rounded-pill text-dark fw-bold">
                                        <i class="fa-solid fa-user-pen fs-5"></i>Edit
                                    </a>
                                </div>
                                <div class="col-auto">
                                    <a href="#" class="btn btn-sm btn-red rounded-pill text-dark fw-bold"
                                       onclick="return confirm('Are you sure to delete')">
                                        <i class="fa-solid fa-trash fs-5"></i>Delete
                                    </a>
                                </div>
                                <div class="col-auto">
                                    <a href="#"
                                       class="btn btn-primary btn-sm text-white fw-bold rounded-pill me-1">
                                        <i class="fa-solid fa-file-alt fs-5"></i>Report
                                    </a>
                                </div>
                            </div>
                            <div class="row justify-content-center">
                                <div class="col-auto">
                                    <a href="#" class="btn btn-info btn-sm fw-bold rounded-pill me-1">
                                        <i class="fa-solid fa-file-zipper fs-5"></i>Archive
                                    </a>
                                </div>
                                <div class="col-auto">
                                    <a href="#" class="btn btn-success btn-sm fw-bold rounded-pill me-1">
                                        <i class="fa-solid fa-file-export fs-5"></i>Sent to Archive
                                    </a>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td data-label="No.">1</td>
                    <td data-label="Name">
                        ဝန်ကြီးဌာန/ အဖွဲ့အစည်းများ၏ ဖွဲ့စည်းပုံအင်အား၊ ခန့်ထားအင်အားနှင့်
                        လစာစရိတ်စာရင်း
                    </td>
                    <td data-label="Section">အုပ်ချုပ်ရေးနှင့်လူ့အရင်းအမြစ်စီမံခန့်ခွဲမှုဌာနခွဲ</td>
                    <td data-label="Department">ပြည်ထောင်စုဝန်ကြီးရုံး</td>
                    <td data-label="Secret"></td>
                    <td data-label="Action">
                        <div class="action">
                            <div class="row mb-3 justify-content-center">

                                <div class="col-auto">
                                    <a href="#" class="btn btn-sm btn-gold rounded-pill text-dark fw-bold">
                                        <i class="fa-solid fa-user-pen fs-5"></i>Edit
                                    </a>
                                </div>
                                <div class="col-auto">
                                    <a href="#" class="btn btn-sm btn-red rounded-pill text-dark fw-bold"
                                       onclick="return confirm('Are you sure to delete')">
                                        <i class="fa-solid fa-trash fs-5"></i>Delete
                                    </a>
                                </div>
                                <div class="col-auto">
                                    <a href="#"
                                       class="btn btn-primary btn-sm text-white fw-bold rounded-pill me-1">
                                        <i class="fa-solid fa-file-alt fs-5"></i>Report
                                    </a>
                                </div>
                            </div>
                            <div class="row justify-content-center">
                                <div class="col-auto">
                                    <a href="#" class="btn btn-info btn-sm fw-bold rounded-pill me-1">
                                        <i class="fa-solid fa-file-zipper fs-5"></i>Archive
                                    </a>
                                </div>
                                <div class="col-auto">
                                    <a href="#" class="btn btn-success btn-sm fw-bold rounded-pill me-1">
                                        <i class="fa-solid fa-file-export fs-5"></i>Sent to Archive
                                    </a>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<div>
    @await Html.PartialAsync("_AdminFooter")
</div>